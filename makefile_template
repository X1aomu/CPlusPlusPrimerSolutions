# Thie file is the template for all Makefiles
# DO NOT DELETE THIS FILE

CXX = g++
CXXFLAGS = -pipe -std=c++11 -pedantic-errors -Wall -Wextra -ggdb -lm
INCLUDES = -I..

CXX_SRCS = $(wildcard *.cc)
CXX_BINS = $(patsubst %.cc, %, $(CXX_SRCS))

.PHONY: all

all: $(CXX_BINS)

%: %.cc
	-$(CXX) $(CXXFLAGS) $(INCLUDES) -o $@ $<

clean:
	rm -f *\~ .*.un\~

clobber: clean
	rm -f $(CXX_BINS)
