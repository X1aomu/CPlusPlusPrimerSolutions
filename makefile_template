# Thie file is the template for all Makefiles
# DO NOT DELETE THIS FILE

LDFLAGS = -lstdc++
CXX = g++
FLAGS = -pipe -std=c++11 -pedantic-errors -Wall -Wextra -ggdb
INC = -I..
CXXFLAGS = $(FLAGS) $(INC)

all: $(TARGETS)

# Force to build *.o files first
$(TARGETS): %: %.o # a Static Pattern Rule
	$(CXX) $(LDFLAGS) $^ -o $@

%.o: %.cc
	$(CXX) $(CXXFLAGS) -c $< -o $@

%.o: %.h

clean:
	rm -f *.o

clobber: clean
	rm -f $(TARGETS)

.PHONY: all clean clobber
